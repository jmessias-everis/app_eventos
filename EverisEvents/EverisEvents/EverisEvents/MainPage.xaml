<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EverisEvents"
             x:Class="EverisEvents.MainPage">

    <ScrollView Margin="5,5,5,5">
    <StackLayout Margin="20,35,20,25"
                 Orientation="Vertical">
        <!-- Place new controls here -->
        <Label FontSize ="16" Text="Matrícula"/>
        <Editor Keyboard="Numeric"
            FontSize="18"
            Placeholder ="Digite sua Matricula"
            />
        <Label FontSize ="16" Text="Email"/>
        <Editor Keyboard="Email" FontSize="18" Placeholder="Digite seu Email"/>
        <Label FontSize ="16" Text="Senha"/>
        <Entry 
            FontSize="18"
            Placeholder="Digite sua senha aqui"
            MaxLength="15"
            IsPassword="True"
            IsTextPredictionEnabled="False"
            IsSpellCheckEnabled="false" />
        <Button Text="Login" BackgroundColor="Green" />
    </StackLayout>
    </ScrollView>
</ContentPage>